#!/bin/bash

file=$(readlink -f "$1")
directory=${file##*/}
base=${file%.*}

case $1 in
    *.md) pandoc --filter pandoc-crossref "$file" -o "$base".pdf ;;
    *.tex) pdflatex --output-directory="$directory" "$file" ;;
    *.py) setid "$TERMINAL" -e python "$file";;
    *.ms) groff -ms -K utf8 -t -U -p -G -e -T pdf "$file"  > "$base".pdf;;
esac
